# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_NAME=QR Editor
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_GA_TRACKING_ID=GA_MEASUREMENT_ID

# Backend Environment Variables
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/qr-editor
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/qr-editor

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./temp/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@qreditor.com

# Third Party Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token
SENTRY_DSN=your-sentry-dsn

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# QR Code Generation
QR_DEFAULT_SIZE=256
QR_DEFAULT_MARGIN=4
QR_ERROR_CORRECTION_LEVEL=M
QR_MAX_SIZE=1024

# API Keys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
